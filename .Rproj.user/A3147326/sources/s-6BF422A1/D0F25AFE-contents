data("cars")
# Gráfico de trazos
plot(cars,
     type="s",
     main="Ejemplo de gráfico",
     xlab = "Velocidad",
     ylab = "Distancia",
     cex = 0.5, col = "dark red")
# Gráfico de barras
help("barplot")
barplot(cars$speed,
        main = "Velocidades",
        xlab = "Frecuencia de velocidades", horiz = FALSE,
        col = "blue")
# Histograma
hist(cars$dist,
     main = "Distancias recorridas",
     xlab = "Distancias",
     ylab = "Frecuencias",
     xlim = c(50,125),
     col = "yellow",
     freq = TRUE)
# Gráfico de cajas
boxplot(cars$speed,
        main = "Comportamiento promedio de velocidad",
        xlab = "Km por hora",
        ylab = "Velocidad",
        col = "orange", border = "brown",
        horizontal = TRUE, notch = TRUE)
# Gráficando con ggplot
library(tidyverse)
library(datos)
# Modo 1
data(iris)
ggplot(data = iris)+
  geom_point(mapping = aes(x = Sepal.Length,
                           y = Sepal.Width), alpha = 0.4, color = "blue")
# Modo 2
ggplot(data = iris, mapping = aes(x = Sepal.Length,
                           y = Sepal.Width)) + geom_point(alpha = 0.4, color = "blue")


# ejemplo 3
ggplot(data = iris, aes(x = Sepal.Length, y = Sepal.Width)) + 
  geom_point(alpha = 0.7, aes(color = Species, shape = Species))

# Ejemplos astéticos
ggplot(data = mpg) +
  geom_point(mapping = aes(x = displ, y = hwy, color = class))

# Cambiar tamaño
ggplot(data = mpg) +
  geom_point(mapping = aes(x = displ, y = hwy, size = class))

# Degradado del color
ggplot(data = mpg) +
  geom_point(mapping = aes(x = displ, y = hwy, alpha = class))

# Forma del trazo
ggplot(data = mpg) +
  geom_point(mapping = aes(x = displ, y = hwy, shape = class))
############
ggplot(data = mpg) +
  geom_point(mapping = aes(x = displ, y = hwy), color = "blue")
